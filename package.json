{
  "name": "wealthlog",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "wealthlogs-code/apps/*",
    "wealthlogs-code/packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "clean": "npm run clean:build && npm run clean:deps",
    "clean:build": "rm -rf wealthlogs-code/apps/*/dist wealthlogs-code/apps/*/.next wealthlogs-code/packages/*/dist",
    "clean:deps": "rm -rf node_modules wealthlogs-code/apps/*/node_modules wealthlogs-code/packages/*/node_modules",
    
    "dev": "concurrently -n \"backend,web\" -c \"yellow,cyan\" \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:web": "cd wealthlogs-code/apps/web && npm run dev",
    "dev:backend": "cd wealthlogs-code/apps/backend && npm run dev",
    "dev:mobile": "cd wealthlogs-code/apps/mobile && npm run dev",
    
    "build": "npm run build:shared && npm run build:backend && npm run build:web",
    "build:shared": "cd wealthlogs-code/packages/shared && npm run build",
    "build:web": "cd wealthlogs-code/apps/web && npm run build",
    "build:backend": "cd wealthlogs-code/apps/backend && npm run build",
    "build:mobile": "cd wealthlogs-code/apps/mobile && npm run build:mobile",
    
    "start": "concurrently -n \"backend,web\" -c \"yellow,cyan\" \"npm run start:backend\" \"npm run start:web\"",
    "start:web": "cd wealthlogs-code/apps/web && npm run start",
    "start:backend": "cd wealthlogs-code/apps/backend && npm run start",
    
    "db:migrate": "cd wealthlogs-code/apps/backend && npx prisma migrate dev",
    "db:push": "cd wealthlogs-code/apps/backend && npx prisma db push",
    "db:studio": "cd wealthlogs-code/apps/backend && npx prisma studio",
    "db:reset": "cd wealthlogs-code/apps/backend && npx prisma migrate reset",
    
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd wealthlogs-code/apps/backend && npm test",
    "test:web": "cd wealthlogs-code/apps/web && npm test",
    
    "lint": "npm run lint:backend && npm run lint:web",
    "lint:backend": "cd wealthlogs-code/apps/backend && npm run lint",
    "lint:web": "cd wealthlogs-code/apps/web && npm run lint",
    
    "mobile:sync": "cd wealthlogs-code/apps/mobile && npx cap sync",
    "mobile:ios": "cd wealthlogs-code/apps/mobile && npx cap run ios",
    "mobile:android": "cd wealthlogs-code/apps/mobile && npx cap run android",
    
    "setup": "npm install && npm run build:shared && npm run db:push",
    "fresh": "npm run clean && npm run setup"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^2.4.4"
  }
}
